<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
    <link rel="shortcut icon" href="{{ asset('bundles/louvrebooking/images/favicon.ico') }}" type="image/x-icon">
    <title>{% block title %}{{ 'home.head.title'|trans }}{% endblock %}</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ asset('bundles/louvrebooking/css/bootstrap.min.css') }}" />
    <!-- Bootstrap DatePicker -->
    <link rel="stylesheet" href="{{ asset('bundles/louvrebooking/css/bootstrap-datepicker3.min.css') }}" />
    <!-- CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/louvrebooking/css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/louvrebooking/css/styletablette.css') }}" media="screen and (min-width: 768px)" />
    <link rel="stylesheet" href="{{ asset('bundles/louvrebooking/css/styleecran.css') }}" media="screen and (min-width: 992px)" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

<div class="container">
    <header class="row">
        <div class="col-xs-6 col-sm-3 col-md-2">
            <a href="{{ path('louvre_booking_index') }}"><img id="logo" src="{{ asset('bundles/louvrebooking/images/logo.jpg') }}" /></a>
        </div>
        <div class="col-xs-6 col-sm-8 col-md-8 text-center text-uppercase">
            <h1>{{ 'home.header.title'|trans|nl2br }}</h1>
        </div>
            {% if app.request.locale == 'en' %}
                {% set params = app.request.attributes.get('_route_params')|merge({'_locale': 'fr'}) %}
            <div class="col-xs-2 col-xs-push-10 col-sm-1 col-sm-push-0 col-md-2">
                <a href="{{ path(app.request.attributes.get('_route'), params) }}">
                    <img class="flag" src="{{ asset('bundles/louvrebooking/images/flag_fr.png') }}" />
                </a>
            </div>
            {% elseif app.request.locale == 'fr' %}
                {% set params = app.request.attributes.get('_route_params')|merge({'_locale': 'en'}) %}
            <div class="col-xs-2 col-xs-push-10 col-sm-1 col-sm-push-0 col-md-2">
                <a href="{{ path(app.request.attributes.get('_route'), params) }}">
                    <img class="flag" src="{{ asset('bundles/louvrebooking/images/flag_en.png') }}" />
                </a>
            </div>
            {% endif %}
        <nav class="col-xs-10 col-xs-pull-2 col-sm-12 col-sm-pull-0">
            <ul class="list-unstyled list-inline row">
                {% block li %}
                {%  endblock %}
            </ul>
        </nav>
    </header>

    <div id="corps" class="row">
        <section class="col-xs-12 col-sm-6 col-md-7 col-lg-offset-1 col-lg-6">
            <div id="left" class="clearfix">
                {% block formulaire %}
                    {% block titre %}
                        <h2 class="text-center text-uppercase">{{ 'home.form.title'|trans }}</h2>
                    {% endblock %}
                {% endblock %}
                <div id="errors">
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <p class="text-center text-danger">{{ flashMessage|trans }}</p>
                    {% endfor %}
                </div>
            </div>
        </section>
        <aside class="col-xs-12 col-sm-6 col-md-5 col-lg-4">
            <div id="content">
                <h2>{{ 'home.content.title'|trans }}</h2>
                <h4>{{ 'home.content.horaires'|trans }}</h4>
                <p>{{ 'home.content.hordesc'|trans|nl2br }}</p>
                <h4>{{ 'home.content.fermetures'|trans }}</h4>
                <p>{{ 'home.content.fermdesc'|trans }}</p>
                <p><img class="hidden-xs pull-left" src="{{ asset('bundles/louvrebooking/images/fleche.png') }}" />{{ 'home.content.msgenter'|trans }}</p>
                <p>{{ 'home.content.msgenterdesc'|trans }}</p>
                <p>{{ 'home.content.msgattention'|trans }}</p>
            </div>
        </aside>
    </div>
    <footer class="row">
        <div class="col-xs-12 col-sm-push-7 col-sm-5 col-md-push-8 col-md-4 col-lg-push-9 col-lg-3">
            <a href="http://www.louvre.fr"><img id="photo" src="{{ asset('bundles/louvrebooking/images/pyramide.jpg') }}" /></a>
        </div>
        <nav class="col-xs-12 col-sm-pull-5 col-sm-7 col-md-pull-4 col-md-8 col-lg-pull-3 col-lg-9">
            <ul class="list-inline">
                <li><a href="#">{{ 'home.footer.credits'|trans }}</a>.</li>
                <li><a href="#">{{ 'home.footer.contacts'|trans }}</a>.</li>
                <li><a href="#">{{ 'home.footer.legalnotice'|trans }}</a>.</li>
                <li><a href="#">{{ 'home.footer.socialnetworks'|trans }}</a></li>
            </ul>
        </nav>
    </footer>
</div>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="{{ asset('bundles/louvrebooking/js/jquery-3.1.1.min.js') }}"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="{{ asset('bundles/louvrebooking/js/bootstrap.min.js') }}"></script>
<!-- Bootstrap DatePicker -->
<script src="{{ asset('bundles/louvrebooking/js/bootstrap-datepicker.min.js') }}"></script>
<script src="{{ asset('bundles/louvrebooking/js/bootstrap-datepicker.fr.min.js') }}"></script>
<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="{{ asset('bundles/louvrebooking/js/ie10-viewport-bug-workaround.js') }}"></script>
<script src="https://js.stripe.com/v2/"></script>
{% block javascript %}
{% endblock %}
</body>
</html>